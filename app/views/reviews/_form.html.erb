<%= bootstrap_form_tag url: "/users/#{@user.id}/reviews" do |rev| %>
	<%= rev.text_field :rating, placeholder: "Rate from 1 to 5" %>
	<%= rev.text_area :review %>
	<%= rev.hidden_field :first_name, :value => @current_user.first_name %>
	<%= rev.hidden_field :last_name, :value => @current_user.last_name %>

	<%= rev.primary 'Review' %>
<% end %>
